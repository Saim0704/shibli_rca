<!DOCTYPE html>
<html lang="en" style="box-sizing: border-box; margin: 0; padding: 0">
  <head>
    <meta charset="UTF-8" />
    <title>Shibli RCA Admit Card</title>
    <script defer>
      window.print();
    </script>
    <style>
      body {
        background: white;
        color: black;
        margin: 0;
      }

      hr {
        margin-top: 5px;
        margin-bottom: 5px;
      }

      tr {
        padding: 5px;
      }

      td {
        border: 1px solid black;
        padding: 5px;
      }

      .empty-table-cell {
        width: 250px;
      }

      .inner-padding {
        padding: 5px;
      }

      .candidate-container {
        border-width: 1px;
        border-color: black;
        border-style: dashed;
        display: flex;
        padding: 5px;
      }

			@media print {
				.candidate-container {
					page-break-after: avoid;
				}
			}

      .middle-signature-box-container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-gap: 8px;
      }

      .top-user-details {
        margin-top: 0;
        margin-bottom: 5px;
      }

      .top-actual-image {
				height: 100%;
        max-height: 150px;
        max-width: 100%;
      }

      .top-image-container {
        border: 1px solid black;
        width: 120px;
        height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-left: 5px;
        padding-right: 5px;
        font-size: xx-small;
      }

      .middle-signature-box {
        border: 1px solid black;
      }

      .middle-signature-box > .empty-div {
        width: 100%;
        height: 60px;
        border-bottom: 1px solid black;
      }

      .middle-signature-box > .description-div {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
        padding: 5px;
      }

      .middle-signature-box > .description-div > p {
        text-align: center;
        margin-top: 0;
        margin-bottom: 0;
        font-size: x-small;
      }
    </style>
  </head>

  <body>
    <div class="inner-padding" style="display: flex; padding-bottom: 0">
      <img
        style="height: 60px; width: 60px"
        src="https://shiblirca.in/favicon.ico"
        alt="Shibli RCA Logo"
      />
      <div
        style="
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
          flex-grow: 1;
        "
      >
        <h4 style="font-weight: bolder; margin-top: 0; margin-bottom: 0">
          SHIBLI RESIDENTIAL COACHING ACADEMY
        </h4>
        <p style="margin-top: 0; margin-bottom: 0">
          Azamgarh, Uttar Pradesh 276001
        </p>
      </div>
    </div>

    <hr />

    <div class="inner-padding">
      <h4 style="text-align: center; margin-top: 0">
        <u>ATTENDANCE SHEET</u>
      </h4>

      <div
        style="
          display: flex;
          justify-content: space-between;
          font-size: small;
          padding-left: 5px;
          padding-right: 5px;
        "
      >
        <p class="top-user-details">
          <b>DATE OF TEST</b> &nbsp; : &nbsp; 10-07-2023
        </p>
        <p class="top-user-details">
          <b>TIME OF TEST</b> &nbsp; : &nbsp; 10:00 AM TO 01:00 PM
        </p>
      </div>

      <p class="top-user-details" style="margin-left: 5px">
        <b>CENTRE</b> &nbsp; : &nbsp; <%= centre %>
      </p>
    </div>


    <br />
    <br />

    <b style="text-align: center">
      Total Present ................................. (In words)
      ......................................................................................................
    </b>
    
		<br />
    <br />

    <b style="text-align: center">
      Total Absent .................................. (In words)
      ......................................................................................................
    </b>

    <br />
    <br />
    <br />
    <br />

    <div class="inner-padding middle-signature-box-container">
      <div class="middle-signature-box">
        <div class="empty-div"></div>
        <div class="description-div">
          <b>Invigilator&apos;s Signature</b>
        </div>
      </div>

      <div class="middle-signature-box">
        <div class="empty-div"></div>
        <div class="description-div">
          <b>Invigilator&apos;s Signature</b>
        </div>
      </div>

      <div class="middle-signature-box">
        <div class="empty-div"></div>
        <div class="description-div">
          <b> Head of the Institution&apos;s Signature with Seal </b>
        </div>
      </div>
    </div>

    <% for (let i=0; i<registrations.length; i++) { %>
    <div class="candidate-container">
      <div class="top-image-container">
        <img
          class="top-actual-image"
          src="<%= registrations[i].photo %>"
          alt="PHOTOGRAPH UPLOADED THROUGH PORTAL"
        />
      </div>
      <div
        style="
          flex-grow: 1;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
        "
      >
        <div style="padding-left: 5px">
          <p class="top-user-details">
            <b>ROLL NUMBER</b> &nbsp; : &nbsp; <%= registrations[i].rollNumber
            %>
          </p>
          <p class="top-user-details">
            <b>NAME</b> &nbsp; : &nbsp; <%= registrations[i].name %>
          </p>
        </div>

        <table style="border-collapse: collapse; width: 100%">
          <tr>
            <td>OMR No.</td>
            <td class="empty-table-cell"></td>
          </tr>
          <tr>
            <td>QUESTION BOOKLET No.</td>
            <td class="empty-table-cell"></td>
          </tr>
          <tr>
            <td>SET</td>
            <td class="empty-table-cell"></td>
          </tr>
        </table>
      </div>

      <div style="display: flex; flex-direction: column; width: 200px">
        <div style="border: 1px solid black; max-height: 75px;">
          <img
            class="top-actual-image"
            src="<%= registrations[i].signature %>"
            alt="Candidate Signature"
          />
        </div>

        <div class="middle-signature-box" style="flex-grow: 1">
          <div class="description-div">
            <b>Candidate&apos;s Signature</b>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </body>
</html>
